<%= form_for @order do |f| %>
  <% if @order.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@order.errors.count, "error") %>.
    </div>
    <ul>
    <% @order.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, placeholder: 'Give us your address',
      class: 'form-control' %>

    <%= f.hidden_field :state_order_id, value: '2' %>
    <%= f.hidden_field :order_id, value: current_order.id %>
    <%= render "order_line" %>
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
