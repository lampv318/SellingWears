<% provide :title, "Category" %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for [:admin, @category] do |f| %>
        <br><br><hr>
        <h2><%= "new" %></h2>
        <br>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg",
          placeholder: "name" %>
        </div>
        <div class="row">
          <div class="col-xs-12 col-md-6"><%= f.submit "add",
            class: "btn btn-warning btn-block btn-lg" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
