<% provide :title, "New" %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for [:admin, @product] do |f| %>
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-lg",
            placeholder: "name" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.select :category_id,
              Category.all.collect {|c| [ c.name, c.id ]},
              class: "form-control input-lg" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.number_field :price, class: "form-control input-lg",
            placeholder: "price" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.text_field :description, class: "form-control input-lg",
        placeholder: "description" %>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.number_field :quantity, class: "form-control input-lg",
            placeholder: "quantity" %>
          </div>
        </div>
         <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.file_field :picture, class: "form-control input-lg",
            placeholder: "picture" %>
          </div>
        </div> 
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-6"><%= f.submit "Add to product",
          class: "btn btn-warning btn-block btn-lg" %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>
