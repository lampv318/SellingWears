<div class="col-md-2 col-sm-3">
  <div class="product-item wow fadeInUp" data-wow-duration="1s" data-wow-delay="0">
    <div class="product-img">
       <a href="#" class="image-hover">
          <img src="images/collections/<%= product.id %>.jpg" alt="" class="product-image-photo">
          <img src="images/collections/<%= product.id %>.jpg" alt="" class="product-image-photo">
       </a>
       <!-- <p class="product-label sale-label">Sale</p> -->
    </div>
    <div class="product-info">
       <div class="ratings">
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star empty"></i>
          <i class="fa fa-star empty"></i>
       </div>
       <div class="product-name">
          <a href="#" class="product-item-link">
            <%= link_to product.name ,product %></h4>
          </a>
       </div>
       <div class="price-box price-final_price">
          <span class="price-container">
             <span class="price">
              <%= number_to_currency product.price %>
           </span>
        </span>
     </div>
    <div class="actions">
         <div class="action add-to-cart">
            <% if logged_in? %>
            <%= form_for @order_line, remote: true do |f| %>        
            <%= f.hidden_field :number, value: '1' %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit " " %>
            <% end %>
            <% end %>
         </div>
         <div class="action add-to-wishlist">
            <a href="#" data-toggle="tooltip" data-placement="top" title="Add to wishlist">
            </a>
         </div>
         <div class="action add-to-quickview">
            <a href="#" data-toggle="tooltip" data-placement="top" title="Add to quickview">
            </a>
         </div>
      </div>
    </div>
  </div>
</div>



