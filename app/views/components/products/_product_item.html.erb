<!-- product -->
<div class="product-item wow fadeInUp animated" data-wow-duration="1s" data-wow-delay="0ms">
   <div class="product-img">
      <a href="/products/<%= product.id %>" class="image-hover">
         <div class="product-img product-image-photo">
            <img src="<%= product.img_url %>" alt="" class="product-image-photo">
            <img src="<%= product.img_url %>" alt="" class="product-image-photo">
         </div>
      </a>
   </div>
   <div class="product-info">
      <div class="ratings">
         <div class="ratings">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star empty"></i>
            <i class="fa fa-star empty"></i>
         </div>
      </div>
      <div class="product-name">
         <h4><%= link_to product.name ,product %></h4>
      </div>
      <div class="price-box price-final_price">
         <span class="price">
            <%= number_to_currency product.price %>
         </span>  
      </div>
      <!-- actions -->
      <div class="actions">
         <% if logged_in? %>
         <div class="action btn-quick-add-to-cart add-to-cart" data-product-id="<%= product.id %>">
            <a href="javascript:void(0)"  data-toggle="tooltip" data-placement="top" title="Add to cart">
            </a>
         </div>
         <% else %>
         <div class="action add-to-cart">
            <%= link_to "", login_path, "data-toggle" => "tooltip", "data-placement"=>"top", "title"=>"Login to buy" %>
         </div>
         <% end %>

         <div class="action add-to-wishlist" >
            <% if logged_in? %>
            <%= form_for current_user.relationships.build  do |f| %>       
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.submit "Add", class: "action add-to-wishlist", style: "z-index: 2;  width: 100%; height: 100%;  display: inline-block;" %>
            <% end %>
            <% end %>
           <!--  <a href="javascript:void(0)" data-toggle="tooltip" data-placement="top" title="Add to wishlist">
        </a> -->
     </div>
     <div class="action add-to-quickview">
      <a href="javascript:void(0)" data-toggle="tooltip" data-placement="top" title="Add to quickview">
      </a>
   </div>
</div>
<!-- end actions -->
</div>
</div>
<!-- </div> -->
<!-- end product -->
