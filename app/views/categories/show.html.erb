<div class="breadcrumbs">
   <div class="container">
      <ul class="items">
         <li class="item home">
            <a href="#" title="Go to Home Page">Home</a>
         </li>
         <li class="item category ">
            <strong><%= @category.name %></strong>
         </li>
      </ul>
   </div>
</div>
<main id="maincontent" class="page-main products-page">
   <div class="container">
      <div class="columns">                        
         <div class="column main">
            <div class="toolbar">
               <div class="sort clearfix">
                  <form action="#" class="ordering pull-left">
                     <div class="selectbox">
                        <select class="orderby" name="orderby">
                           <option value="menu_order">Default sorting</option>
                           <option value="popularity">popularity</option>
                           <option value="rating">average rating</option>
                           <option value="date">newness</option>
                           <option value="price">price: low to high</option>
                           <option value="price-desc">price: high to low</option>
                        </select>
                     </div>
                  </form>
                  <div class="style-switch pull-right">               
                     <!-- <a class="active btn-grid"  href="#" data-view="grid"><i class="fa fa-th"></i></a>
                     <a href="#" class="btn-list" data-view="list"><i class="fa fa-th-list"></i></a> -->
                  </div>
               </div>
            </div>
            <div class="product-grid clearfix" id="tabs-grid">
               <% @products.limit(9).each do |product| %>
               <div class="col-xs-12 col-sm-4">
                  <%= render "components/products/product_item", product: product%>
               </div>
               <% end %>
            </div>
         </div>
      </div>
   </div>
</main>
<script type="text/javascript">
   var products = <%= @products.to_json.html_safe -%>;

   console.log(products);
</script>
