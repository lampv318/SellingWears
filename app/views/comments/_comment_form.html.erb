<%= form_for @comment do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <p> <%= f.text_area :content, placeholder: "Add review", rows: "5" ,cols: "80" %> </p>
    <div> <%= f.hidden_field :user_id, value: current_user.id %> </div>
    <div> <%= f.hidden_field :product_id, value: @product.id %> </div>
  </div>
  <%= f.submit "review", class: "btn btn-primary" %>
<% end %>
